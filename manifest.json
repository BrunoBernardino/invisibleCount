{
  "manifest_version": 2,

  "name": "invisibleCount",
  "description": "This extension will hide stats and counts from Twitter and Medium.",
  "version": "1.0.0",

  "icons": {
    "512": "icon.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://medium.com/*",
        "https://m.signalvnoise.com/*",
        "https://hackernoon.com/*"
      ],
      "js": [
        "hiders.js",
        "remove_counts.js"
      ],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "tabs"
  ]
}
